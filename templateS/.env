# Rails environment
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Secret key base (générala con `rails secret`)
SECRET_KEY_BASE=tu_clave_secreta_aqui

# Database (ajusta si usas PostgreSQL, MySQL o SQLite)
DATABASE_URL=sqlite3:db/development.sqlite3

# Mailer SMTP config (ejemplo Gmail)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=gmail.com
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_email
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# AWS S3 (para Active Storage si usas almacenamiento en la nube)
#AWS_ACCESS_KEY_ID=tu_aws_access_key_id
#AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key
#AWS_REGION=us-east-1
#AWS_BUCKET=nombre_de_tu_bucket
