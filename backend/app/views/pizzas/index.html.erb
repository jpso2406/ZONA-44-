<div class="container mt-4">
  <h1 class="mb-4">游꼣 Sistema de Pizzas</h1>
  
  <div class="row">
    <!-- Pizzas Tradicionales -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Pizzas Tradicionales</h5>
        </div>
        <div class="card-body">
          <% @pizzas_tradicionales.each do |pizza| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span><%= pizza.nombre %></span>
              <span class="badge bg-success">$<%= pizza.precio_minimo %></span>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "Gestionar Tradicionales", pizza_tradicionales_path, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Pizzas Especiales -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">Pizzas Especiales</h5>
        </div>
        <div class="card-body">
          <% @pizzas_especiales.each do |pizza| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span><%= pizza.nombre %></span>
              <span class="badge bg-success">$<%= pizza.precio_minimo %></span>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "Gestionar Especiales", pizza_especiales_path, class: "btn btn-warning btn-sm" %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Pizza Combinada -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">Pizza Combinada</h5>
        </div>
        <div class="card-body">
          <% if @pizza_combinada %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span><%= @pizza_combinada.nombre %></span>
              <span class="badge bg-success">$<%= @pizza_combinada.precio_minimo %></span>
            </div>
            <small class="text-muted"><%= @pizza_combinada.descripcion %></small>
          <% end %>
          <div class="mt-3">
            <%= link_to "Gestionar Combinada", pizza_combinadas_path, class: "btn btn-info btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <!-- Tama침os -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0">Tama침os Disponibles</h5>
        </div>
        <div class="card-body">
          <% @tamanos.each do |tamano| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span><%= tamano.nombre %> (<%= tamano.slices %> slices, <%= tamano.tamano_cm %>cm)</span>
            </div>
          <% end %>
          <div class="mt-3">
            <%= link_to "Gestionar Tama침os", tamano_pizzas_path, class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Estad칤sticas -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">Estad칤sticas</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <h4 class="text-primary"><%= @pizzas_tradicionales.count %></h4>
              <small>Tradicionales</small>
            </div>
            <div class="col-6">
              <h4 class="text-warning"><%= @pizzas_especiales.count %></h4>
              <small>Especiales</small>
            </div>
          </div>
          <div class="row text-center mt-3">
            <div class="col-6">
              <h4 class="text-info">1</h4>
              <small>Combinada</small>
            </div>
            <div class="col-6">
              <h4 class="text-secondary"><%= @tamanos.count %></h4>
              <small>Tama침os</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 