<div class="col-md-4 mb-4">
              <div class="card shadow-sm h-100">
                <% if grupo.foto.attached? %>
                  <%= image_tag grupo.foto, class: "card-img-top", alt: grupo.nombre %>
                <% else %>
                  <%= image_tag "https://via.placeholder.com/300x150?text=Sin+Imagen", class: "card-img-top", alt: "Sin imagen" %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= grupo.nombre %></h5>
                  <div class="d-flex justify-content-between">
                    <%= link_to "Editar", '#', class: "btn btn-warning btn-sm editar-grupo", data: { grupo_id: grupo.id } %>
                    <%= link_to "Eliminar", grupo, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-danger btn-sm" %>
                  </div>
                </div>
              </div>
            </div>