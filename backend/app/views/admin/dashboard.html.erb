<h1>Panel de Administrador</h1>

<% if admin_signed_in? %>
  <p>Bienvenido, <%= current_admin.email %></p>

  <%= link_to "Cerrar sesión", destroy_admin_session_path, method: :delete, data: { confirm: "¿Deseas cerrar sesión?" }, class: "btn btn-danger" %>

  <hr>

  <h2>Accesos rápidos</h2>
  <ul>
    <li><%= link_to "Ver grupos", grupos_path %></li>
    <!-- Agrega más accesos según tus modelos -->
  </ul>
<% else %>
  <p>No has iniciado sesión como administrador.</p>
  <%= link_to "Iniciar sesión", new_admin_session_path %>
<% end %>