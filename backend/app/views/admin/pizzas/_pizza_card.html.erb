<div class="col-md-4 mb-4">
  <div class="card h-100">
    <% if pizza.foto.attached? %>
      <%= image_tag pizza.foto, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
    <% else %>
      <%= image_tag "default_pizza.jpg", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
    <% end %>
    
    <div class="card-body">
      <h5 class="card-title"><%= pizza.nombre %></h5>
      <p class="card-text text-muted"><%= pizza.categoria.titleize %></p>
      
      <% if pizza.descripcion.present? %>
        <p class="card-text"><%= pizza.descripcion %></p>
      <% end %>
      
      <div class="mt-3">
        <h6>Precios:</h6>
        <ul class="list-unstyled">
          <% pizza.tamano_pizzas.each do |tp| %>
            <li>
              <strong><%= tp.tamano.titleize %> (<%= tp.tamano_cm %>cm):</strong>
              $<%= number_with_delimiter(tp.precio) %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="mt-2">
        <% if pizza.borde_queso %>
          <span class="badge bg-info">Borde de queso disponible</span>
        <% end %>
        <% if pizza.combinada %>
          <span class="badge bg-warning">Combinada disponible</span>
        <% end %>
      </div>
    </div>

    <div class="card-footer text-end">
      <button class="btn btn-sm btn-outline-primary me-2" 
              onclick="editarPizza(<%= pizza.id %>)"
              data-bs-toggle="modal"
              data-bs-target="#editPizzaModal">
        <i class="bi bi-pencil"></i>
      </button>
      <button class="btn btn-sm btn-outline-danger"
              onclick="eliminarPizza(<%= pizza.id %>)">
        <i class="bi bi-trash"></i>
      </button>
    </div>
  </div>
</div>
