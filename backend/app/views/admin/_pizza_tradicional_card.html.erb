
<div class="col-md-4 mb-3" id="pizza-tradicional-<%= pizza.id %>">
  <div class="card h-100">
    <% if pizza.foto.attached? %>
      <%= image_tag pizza.foto, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
    <% else %>
      <%= image_tag "https://via.placeholder.com/300x150?text=Sin+Imagen", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= pizza.nombre %></h5>
      <p class="card-text"><%= pizza.descripcion %></p>
      <p class="card-text fw-bold text-success">Desde $<%= pizza.precio_minimo %></p>
      <div class="mb-2">
        <strong>Tama√±os y precios:</strong>
        <ul class="list-unstyled mb-0">
          <% pizza.tamanos_disponibles.each do |tamano| %>
            <% pizza_tamano = pizza.pizza_tamanos.find_by(tamano_pizza_id: tamano.id) %>
            <% borde = tamano.borde_queso %>
            <li>
              <span><%= tamano.nombre %>:</span>
              <span class="fw-bold text-success">$<%= pizza_tamano&.precio || 0 %></span>
              <% if borde.present? %>
                <span class="ms-2">Borde de queso: <span class="fw-bold text-warning">$<%= borde.precio %></span></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="d-flex justify-content-between">
        <button class="btn btn-primary editar-pizza" data-pizza-id="<%= pizza.id %>">Editar</button>
        <button class="btn btn-danger eliminar-pizza" data-pizza-id="<%= pizza.id %>">Eliminar</button>
      </div>
    </div>
  </div>
</div>
