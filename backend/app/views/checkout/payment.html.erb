<div class="payment-container">
  <div class="payment-header">
    <h1>M√©todo de Pago</h1>
    <p>Selecciona tu m√©todo de pago preferido</p>
  </div>

  <div class="payment-content">
    <div class="order-summary">
      <h2>Resumen del Pedido</h2>
      <div class="order-details">
        <div class="order-number">
          <strong>N√∫mero de Pedido:</strong> <%= @order.order_number %>
        </div>
        <div class="order-total">
          <strong>Total a Pagar:</strong> $<%= number_with_precision(@order.total_amount, precision: 0) %>
        </div>
      </div>
    </div>

    <div class="payment-methods">
      <h2>Selecciona tu m√©todo de pago</h2>
      
      <%= form_with url: process_payment_checkout_path(@order), method: :post, local: true, class: "payment-form" do |f| %>
        <div class="payment-options">
          <% @payment_methods.each do |method| %>
            <div class="payment-option">
              <input type="radio" name="payment_method" id="<%= method[:id] %>" value="<%= method[:id] %>" required>
              <label for="<%= method[:id] %>" class="payment-method-card">
                <div class="method-icon">
                  <span class="icon"><%= method[:icon] %></span>
                </div>
                <div class="method-info">
                  <h3><%= method[:name] %></h3>
                  <% case method[:id] %>
                  <% when 'credit_card' %>
                    <p>Paga con tu tarjeta de cr√©dito de forma segura</p>
                  <% when 'debit_card' %>
                    <p>Paga con tu tarjeta de d√©bito de forma segura</p>
                  <% when 'pse' %>
                    <p>Transferencia bancaria en l√≠nea</p>
                  <% when 'cash' %>
                    <p>Paga en efectivo al recibir tu pedido</p>
                  <% end %>
                </div>
                <div class="method-radio">
                  <div class="radio-circle"></div>
                </div>
              </label>
            </div>
          <% end %>
        </div>

        <div class="payment-actions">
          <%= f.submit "Procesar Pago", class: "btn btn-pay" %>
          <%= link_to "Volver al Carrito", mostrar_carrito_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>

    <div class="payment-security">
      <div class="security-badge">
        <div class="security-icon">üîí</div>
        <div class="security-text">
          <h3>Pago 100% Seguro</h3>
          <p>Todos los pagos son procesados de forma segura por PayU</p>
        </div>
      </div>
    </div>
  </div>
</div>

