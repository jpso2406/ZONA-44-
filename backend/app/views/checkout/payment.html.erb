}

.order-total {
  background: #e8f5e8;
  color: #2d5a2d;
  font-weight: 600;
}

.payment-methods {
  background: white;
  padding: 30px;
  border-radius: 15px;
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

