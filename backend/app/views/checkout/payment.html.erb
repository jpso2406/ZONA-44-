<div class="payment-container">
  <div class="payment-header">
    <h1>M√©todo de Pago</h1>
    <p>Selecciona tu m√©todo de pago preferido</p>
  </div>

  <div class="payment-content">
    <div class="order-summary">
      <h2>Resumen del Pedido</h2>
      <div class="order-details">
        <div class="order-number">
          <strong>N√∫mero de Pedido:</strong> <%= @order.order_number %>
        </div>
        <div class="order-total">
          <strong>Total a Pagar:</strong> $<%= number_with_precision(@order.total_amount, precision: 0) %>
        </div>
      </div>
    </div>

    <div class="payment-methods">
      <h2>Selecciona tu m√©todo de pago</h2>
      <%= form_with url: process_payment_checkout_path(@order), method: :post, local: true, class: "payment-form" do |f| %>
        <div class="payment-options">
          <% @payment_methods.each do |method| %>
            <div class="payment-option">
              <input type="radio" name="payment_method" id="<%= method[:id] %>" value="<%= method[:id] %>" required onclick="toggleCardFields('<%= method[:id] %>')">
              <label for="<%= method[:id] %>" class="payment-method-card">
                <div class="method-icon">
                  <span class="icon"><%= method[:icon] %></span>
                </div>
                <div class="method-info">
                  <h3><%= method[:name] %></h3>
                  <% case method[:id] %>
                  <% when 'credit_card' %>
                    <p>Paga con tu tarjeta de cr√©dito de forma segura</p>
                  <% when 'debit_card' %>
                    <p>Paga con tu tarjeta de d√©bito de forma segura</p>
                  <% when 'pse' %>
                    <p>Transferencia bancaria en l√≠nea</p>
                  <% end %>
                </div>
                <div class="method-radio">
                  <div class="radio-circle"></div>
                </div>
              </label>
            </div>
          <% end %>
        </div>

        <div id="card-fields" style="display:none; margin-top:20px;">
          <h3>Datos de la tarjeta de prueba</h3>
          <div class="form-group">
            <%= f.label :card_number, "N√∫mero de tarjeta" %>
            <%= f.text_field :card_number, value: "4111111111111111", maxlength: 16, class: "form-control", autocomplete: "cc-number", id: "card_number" %>
          </div>
          <div class="form-group">
            <%= f.label :card_expiration, "Fecha de vencimiento (MM/YY)" %>
            <%= f.text_field :card_expiration, value: "12/30", maxlength: 5, class: "form-control", autocomplete: "cc-exp", id: "card_expiration" %>
          </div>
          <div class="form-group">
            <%= f.label :card_cvv, "CVV" %>
            <%= f.text_field :card_cvv, value: "123", maxlength: 4, class: "form-control", autocomplete: "cc-csc", id: "card_cvv" %>
          </div>
          <div class="form-group">
            <%= f.label :card_name, "Nombre en la tarjeta" %>
            <%= f.text_field :card_name, value: "Prueba PayU", class: "form-control", autocomplete: "cc-name", id: "card_name" %>
          </div>
          <div id="card-errors" style="color: red; margin-top: 10px;"></div>
        </div>

        <div class="payment-actions">
          <button type="submit" class="btn btn-pay" id="pay-btn">Procesar Pago</button>
          <span id="pay-spinner" style="display:none; margin-left:10px;"><img src="https://cdn.jsdelivr.net/gh/jpso2406/assets/spinner.svg" width="24" alt="Procesando..."></span>
          <%= link_to "Volver al Carrito", mostrar_carrito_path, class: "btn btn-secondary" %>
        </div>
      <% end %>

      <script>
        function toggleCardFields(method) {
          var cardFields = document.getElementById('card-fields');
          if (method === 'credit_card' || method === 'debit_card') {
            cardFields.style.display = 'block';
          } else {
            cardFields.style.display = 'none';
          }
        }

        document.addEventListener('DOMContentLoaded', function() {
          var form = document.querySelector('.payment-form');
          var payBtn = document.getElementById('pay-btn');
          var spinner = document.getElementById('pay-spinner');
          var cardFields = document.getElementById('card-fields');
          var cardErrors = document.getElementById('card-errors');

          form.addEventListener('submit', function(e) {
            if (cardFields.style.display === 'block') {
              var errors = [];
              var number = document.getElementById('card_number').value.trim();
              var exp = document.getElementById('card_expiration').value.trim();
              var cvv = document.getElementById('card_cvv').value.trim();
              var name = document.getElementById('card_name').value.trim();

              if (!/^\d{16}$/.test(number)) {
                errors.push('El n√∫mero de tarjeta debe tener 16 d√≠gitos.');
              }
              if (!/^\d{2}\/\d{2}$/.test(exp)) {
                errors.push('La fecha debe estar en formato MM/YY.');
              } else {
                var mm = parseInt(exp.split('/')[0], 10);
                var yy = parseInt('20' + exp.split('/')[1], 10);
                var now = new Date();
                var expDate = new Date(yy, mm);
                if (mm < 1 || mm > 12 || expDate < now) {
                  errors.push('La fecha de vencimiento debe ser v√°lida y futura.');
                }
              }
              if (!/^\d{3,4}$/.test(cvv)) {
                errors.push('El CVV debe tener 3 o 4 d√≠gitos.');
              }
              if (name.length < 3) {
                errors.push('El nombre en la tarjeta es obligatorio.');
              }
              if (errors.length > 0) {
                cardErrors.innerHTML = errors.join('<br>');
                e.preventDefault();
                return false;
              } else {
                cardErrors.innerHTML = '';
              }
            }
            payBtn.disabled = true;
            spinner.style.display = 'inline-block';
          });
        });
      </script>
    </div>

    <div class="payment-security">
      <div class="security-badge">
        <div class="security-icon">üîí</div>
        <div class="security-text">
          <h3>Pago 100% Seguro</h3>
          <p>Todos los pagos son procesados de forma segura por PayU</p>
        </div>
      </div>
    </div>
  </div>
</div>

