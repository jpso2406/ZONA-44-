
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="modal-login">
  <div class="login-wrapper">
    <div class="login-container p-5 rounded-5 shadow-lg">
      <h2 class="login-title text-center mb-4 text-warning">📝 Crear cuenta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-login", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, "Correo electrónico", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "ejemplo@correo.com", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "Contraseña", class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">Mínimo <%= @minimum_password_length %> caracteres</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Crea una contraseña", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repite la contraseña", required: true %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Registrarse", class: "btn-login btn btn-warning w-100 fw-bold mb-3", type: "submit" %>
        </div>
      <% end %>

      <p class="text-center mt-2 text-light">¿Ya tienes cuenta?
        <%= link_to "Iniciar sesión", new_user_session_path, class: "text-warning fw-bold" %>
      </p>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>

<style>
  .modal-login {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: linear-gradient(to right, #1e1e2f, #2c2c3c);
    padding: 20px;
  }
  .login-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .login-container {
    background: #2c2c3c;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.6);
    max-width: 400px;
    width: 100%;
    padding: 2.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .login-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.7);
  }
  .form-group {
    position: relative;
  }
  .form-label {
    display: block;
    margin-bottom: 6px;
    color: #fff;
    font-weight: 500;
    font-size: 0.95rem;
  }
  .form-control {
    background: #1e1e2f;
    border: none;
    border-radius: 10px;
    color: #fff;
    padding: 12px 15px;
    width: 100%;
    transition: background 0.3s ease, box-shadow 0.3s ease;
  }
  .form-control:focus {
    background: #252538;
    outline: none;
    box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.4);
  }
  .btn-login {
    font-size: 1rem;
    padding: 12px;
    border-radius: 12px;
  }
  .text-light { color: #eee; }
  .text-warning { color: #ffc107 !important; }
</style>
