
<div class="container-fluid py-4" style="background: #232335; min-height: 90vh;">
  <div class="row">
    <!-- Menú lateral -->
  <nav class="col-md-3 col-lg-2 d-md-block sidebar shadow-sm rounded-4 p-0 me-4" style="min-height: 70vh; background: #232335;">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <a class="nav-link active d-flex align-items-center" style="color: #ffc436; background: #232335; font-weight: bold;" href="#">
              <i class="fa fa-user-circle fa-lg me-2" style="color: #ffc436;"></i> Perfil
            </a>
          </li>
          <li class="nav-item mb-2">
            <%= link_to perfil_pedidos_path, class: "nav-link d-flex align-items-center", style: "color: #bdbdbd;" do %>
              <i class="fa fa-utensils fa-lg me-2" style="color: #bdbdbd;"></i> Pedidos
            <% end %>
          </li>
          <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center" style="color: #bdbdbd;" href="#">
              <i class="fa fa-file-invoice fa-lg me-2" style="color: #bdbdbd;"></i> Datos de facturación electrónica
            </a>
          </li>
          <% if current_user.admin? %>
            <li class="nav-item mb-2">
              <%= link_to dashboard_root_path, class: "nav-link d-flex align-items-center", title: "Panel de Administración", style: "color: #bdbdbd;" do %>
                <i class="fa fa-map-marker-alt fa-lg me-2" style="color: #bdbdbd;"></i> Panel de administración
              <% end %>
            </li>
          <% end %>
          <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center" style="color: #bdbdbd;" href="#">
              <i class="fa fa-map-marker-alt fa-lg me-2" style="color: #bdbdbd;"></i> Dirección de entrega
            </a>
          </li>
          <li class="nav-item mt-4">
            <%= link_to destroy_user_session_path, method: :delete, data: { turbo: false, confirm: "¿Deseas cerrar sesión?" }, class: "nav-link d-flex align-items-center", style: "color: #ff7b47; font-weight: bold;" do %>
              <i class="fa fa-sign-out-alt fa-lg me-2" style="color: #ff7b47;"></i> Cerrar sesión
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Contenido principal -->
    <main class="col-md-8 col-lg-9 ms-sm-auto px-md-4">
      <div class="rounded-4 shadow-sm p-4 mb-4" style="background: #232335; box-shadow: 0 8px 32px 0 #00000060;">
        <h2 class="fw-bold mb-4" style="color: #ffc436;"><i class="fa fa-user-circle me-2" style="color: #ffc436;"></i>Perfil</h2>
        <h5 class="mb-4" style="color: #ffc436;">Datos personales</h5>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Tipo de documento</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.document_type.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Número de documento</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.document_number.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Nombre</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.first_name.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Apellido</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.last_name.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Fecha de nacimiento</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.birthdate&.strftime('%d/%m/%Y') || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Número de teléfono</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.phone.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Correo electrónico</label>
            <input type="email" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.email %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Departamento</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.department.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Ciudad</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.city.presence || '-' %>" disabled>
          </div>
          <div class="col-md-6">
            <label class="form-label fw-semibold" style="color: #ffc436;">Dirección</label>
            <input type="text" class="form-control border-2" style="background: #232335; color: #ffc436; border: 2px solid #ffc436;" value="<%= @user.address.presence || '-' %>" disabled>
          </div>
        </div>
        <div class="mt-4">
          <%= link_to 'Editar perfil', edit_user_registration_path, class: 'btn', style: 'background: #ff7b47; color: #fff; font-weight: bold; border-radius: 12px; font-size: 1.1rem; padding: 0.7rem 2.2rem; box-shadow: 0 2px 8px #00000030;' %>
        </div>
      </div>
    </main>
  </div>
</div>
