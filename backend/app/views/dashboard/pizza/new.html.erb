<div class="card shadow-sm border-0">
  <div class="card-header bg-light">
    <h4 class="mb-0 text-dark">Crear nueva pizza üçï</h4>
  </div>
  <div class="card-body bg-white text-dark">
    <%= form_with model: @pizza, url: new_dashboard_pizza_path, local: true, html: { id: "form-nueva-pizza", multipart: true } do |f| %>

      <div class="mb-3">
        <%= f.label :nombre, "Nombre", class: "form-label fw-bold" %>
        <%= f.text_field :nombre, class: "form-control", placeholder: "Ej. Pizza Hawaiana" %>
      </div>

      <div class="mb-3">
        <%= f.label :descripcion, "Descripci√≥n", class: "form-label fw-bold" %>
        <%= f.text_area :descripcion, class: "form-control", rows: 3, placeholder: "Ingredientes, estilo, etc." %>
      </div>

      <div class="mb-3">
        <%= f.label :precio, "Precio", class: "form-label fw-bold" %>
        <%= f.number_field :precio, class: "form-control", min: 0, step: 100, placeholder: "Ej. 10000" %>
      </div>

      <div class="mb-3">
        <%= f.label :tamano, "Tama√±o", class: "form-label fw-bold" %>
        <%= f.select :tamano, [['Peque√±a', 'small'], ['Mediana', 'medium'], ['Grande', 'large']], {}, class: "form-select" %>
      </div>

      <div class="mb-3 form-check">
        <%= f.check_box :borde_queso, class: "form-check-input", id: "borde_queso" %>
        <%= f.label :borde_queso, "¬øTiene borde de queso?", class: "form-check-label" %>
      </div>

      <div class="mb-3">
        <%= f.label :tipo_pizza, "Tipo de pizza", class: "form-label fw-bold" %>
        <%= f.select :tipo_pizza, [['Tradicional', 'tradicional'], ['Especial', 'especial']], {}, class: "form-select" %>
      </div>

      <div class="text-end">
        <%= f.submit "Crear Pizza", class: "btn btn-success px-4" %>
      </div>

    <% end %>
  </div>
</div>
