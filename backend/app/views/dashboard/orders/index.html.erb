<div class="dashboard-orders">
  <div class="page-header">
    <h1>Gesti√≥n de Pedidos</h1>
    <p>Administra todos los pedidos de la pizzer√≠a</p>
  </div>

  <!-- Estad√≠sticas -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üìä</div>
      <div class="stat-content">
        <h3>Total Pedidos</h3>
        <p class="stat-number"><%= @total_orders %></p>
      </div>
    </div>

    <div class="stat-card pending">
      <div class="stat-icon">‚è≥</div>
      <div class="stat-content">
        <h3>Pendientes</h3>
        <p class="stat-number"><%= @pending_orders %></p>
      </div>
    </div>

    <div class="stat-card paid">
      <div class="stat-icon">‚úÖ</div>
      <div class="stat-content">
        <h3>Pagados</h3>
        <p class="stat-number"><%= @paid_orders %></p>
      </div>
    </div>

    <div class="stat-card failed">
      <div class="stat-icon">‚ùå</div>
      <div class="stat-content">
        <h3>Fallidos</h3>
        <p class="stat-number"><%= @failed_orders %></p>
      </div>
    </div>
  </div>

  <!-- Lista de Pedidos -->
  <div class="orders-section">
    <h2>Lista de Pedidos</h2>
    
    <% if @orders.any? %>
      <div class="orders-table">
        <table>
          <thead>
            <tr>
              <th>N√∫mero</th>
              <th>Cliente</th>
              <th>Total</th>
              <th>Estado</th>
              <th>M√©todo</th>
              <th>Fecha</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr class="order-row <%= order.status %>">
                <td>
                  <strong><%= order.order_number %></strong>
                </td>
                <td>
                  <div class="customer-info">
                    <div><strong><%= order.customer_name %></strong></div>
                    <div class="customer-details">
                      <%= order.customer_email %><br>
                      <%= order.customer_phone %>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="amount">$<%= number_with_precision(order.total_amount, precision: 0) %></span>
                </td>
                <td>
                  <span class="status-badge <%= order.status %>">
                    <%= order.status.humanize %>
                  </span>
                </td>
                <td>
                  <span class="payment-method">
                    <% case order.payment_method %>
                    <% when 'credit_card' %> üí≥ Cr√©dito
                    <% when 'debit_card' %> üí≥ D√©bito
                    <% when 'pse' %> üè¶ PSE
                    <% when 'cash' %> üíµ Efectivo
                    <% else %> N/A
                    <% end %>
                  </span>
                </td>
                <td>
                  <div class="date-info">
                    <div><%= order.created_at.strftime("%d/%m/%Y") %></div>
                    <div class="time"><%= order.created_at.strftime("%H:%M") %></div>
                  </div>
                </td>
                <td>
                  <div class="actions">
                    <%= link_to "Ver", dashboard_order_path(order), class: "btn btn-sm btn-primary" %>
                    <% if order.payment_method == 'cash' && order.pending? %>
                      <%= button_to "Confirmar Pago", confirm_cash_payment_dashboard_order_path(order), 
                          method: :patch, class: "btn btn-sm btn-success", 
                          data: { confirm: "¬øConfirmar pago en efectivo?" } %>
                    <% end %>
                    <% if order.pending? || order.processing? %>
                      <%= button_to "Cancelar", cancel_order_dashboard_order_path(order), 
                          method: :patch, class: "btn btn-sm btn-danger", 
                          data: { confirm: "¬øCancelar esta orden?" } %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="no-orders">
        <p>No hay pedidos registrados a√∫n.</p>
      </div>
    <% end %>
  </div>
</div>

<style>
