<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h2 class="h4 text-dark mb-0">‚úèÔ∏è Editar Grupo</h2>
    </div>

    <div class="card-body">
      <%= form_with model: @grupo, url: dashboard_grupo_path(@grupo), method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :nombre, "Nombre del grupo", class: "form-label text-dark" %>
          <%= f.text_field :nombre, class: "form-control text-dark", placeholder: "Ej. Grupo de ventas" %>
        </div>

        <div class="mb-3">
          <%= f.label :descripcion, "Descripci√≥n", class: "form-label text-dark" %>
          <%= f.text_area :descripcion, class: "form-control text-dark", rows: 4, placeholder: "Describe brevemente el prop√≥sito del grupo" %>
        </div>

        <div class="mb-3">
          <%= f.label :foto, "Foto del grupo", class: "form-label text-dark" %>
          <%= f.file_field :foto, class: "form-control text-dark" %>
          <% if @grupo.foto.attached? %>
            <div class="mt-2">
              <%= image_tag @grupo.foto, class: "img-fluid rounded", style: "max-height: 200px;" %>
            </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
          <%= f.submit "üíæ Guardar Cambios", class: "btn btn-primary" %>
          <%= link_to "‚Üê Volver", dashboard_grupos_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
