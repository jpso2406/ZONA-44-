<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h2 class="h4 text-dark mb-0">‚úèÔ∏è <%= t("admin.grupos.edit") %></h2>
    </div>

    <div class="card-body">
      <%= form_with model: @grupo, url: dashboard_grupo_path(@grupo), method: :patch, local: true do |f| %>
        
        <!-- Nombre -->
        <div class="mb-3">
          <%= f.label :nombre, t("admin.grupos.nombre", default: "Nombre del grupo"), class: "form-label text-dark" %>
          <%= f.text_field :nombre, class: "form-control text-dark", placeholder: t("admin.grupos.placeholders.nombre", default: "Ej. Grupo de ventas") %>
        </div>

        <!-- Descripci√≥n -->
        <div class="mb-3">
          <%= f.label :descripcion, t("admin.grupos.descripcion", default: "Descripci√≥n"), class: "form-label text-dark" %>
          <%= f.text_area :descripcion, class: "form-control text-dark", rows: 4, placeholder: t("admin.grupos.placeholders.descripcion", default: "Describe brevemente el prop√≥sito del grupo") %>
        </div>

        <!-- Foto -->
        <div class="mb-3">
          <%= f.label :foto, t("admin.grupos.foto"), class: "form-label text-dark" %>
          <%= f.file_field :foto, class: "form-control text-dark" %>

          <% if @grupo.foto.attached? %>
            <div class="mt-2">
              <%= image_tag @grupo.foto, class: "img-fluid rounded", style: "max-height: 200px;" %>
            </div>
          <% end %>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-between align-items-center mt-4">
          <%= f.submit "üíæ #{t("admin.grupos.actions.save")}", class: "btn btn-primary" %>
          <%= link_to "#{t("botones.volver_grupos")}", dashboard_grupos_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
