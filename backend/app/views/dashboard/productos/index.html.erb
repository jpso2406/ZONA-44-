<section class="py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 text-dark">üì¶ <%= t("admin.productos.title") %></h1>
      <%= button_tag "‚ûï #{t("admin.productos.new")}", class: 'btn btn-success', data: { bs_toggle: 'modal', bs_target: '#modalSeleccion' } %>
    </div>

    <div class="modal fade" id="modalSeleccion" tabindex="-1" aria-labelledby="modalSeleccionLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-success text-white">
            <h5 class="modal-title" id="modalSeleccionLabel">¬øQu√© deseas agregar?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body text-center">
            <p class="mb-4">Selecciona el tipo de producto que deseas crear:</p>
            <div class="d-grid gap-3">
              <%= link_to "üßÉ #{t("admin.productos.new_product")}" , new_dashboard_producto_path, class: 'btn btn-outline-success', data: { turbo: false } %>
              <%= link_to "üçï #{t("admin.productos.new_pizza")}", new_dashboard_pizza_path, class: 'btn btn-outline-danger', data: { turbo: false } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <%= form_with url: dashboard_productos_path, method: :get, local: true, class: "row g-3 align-items-center" do %>
        <div class="col-auto">
          <%= label_tag :grupo_id, t("admin.productos.filter_group"), class: "form-label text-dark" %>
        </div>
        <div class="col-auto">
          <%= select_tag :grupo_id, options_from_collection_for_select(Grupo.all, :id, :nombre, params[:grupo_id]), prompt: t("admin.productos.all"), class: "form-select" %>
        </div>
        <div class="col-auto">
          <%= submit_tag t("admin.productos.filter"), class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
      
    <% @grupos.each do |grupo| %>
      <div class="mb-5">
        <h2 class="h5 text-dark border-bottom pb-2">üë• <%= grupo.nombre %></h2>

        <div class="row">
          <% grupo.productos.each do |producto| %>
            <div class="col-md-6 col-lg-4 mb-4" id="producto-<%= producto.id %>">
              <div class="card shadow-sm h-100">
                <% if producto.foto.attached? %>
                  <%= image_tag producto.foto, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span><%= t("grupos.no_image")%></span>
                  </div>
                <% end %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= producto.name %></h5>
                  <p class="card-text text-muted"><%= producto.descripcion %></p>
                  <p class="card-text fw-bold"><%= number_to_currency(producto.precio, unit: "COP$", separator: ",", delimiter: ".", precision: 0) %></p>
                    <p class="card-text"><small class="text-muted">Grupo: <%= grupo.nombre %></small></p>
                    


                    
                                                                                                        
                  <div class="mt-auto">
                    <%= link_to "üëÅ #{t("admin.productos.actions.see")}", producto_path(producto), class: 'btn btn-outline-primary btn-sm me-2' %>
                    <%= link_to "‚úèÔ∏è #{t("admin.productos.edit")}", edit_dashboard_producto_path(producto), class: 'btn btn-outline-secondary btn-sm me-2' %>
                    <%= link_to "üóë #{t("admin.productos.actions.delete")}", dashboard_producto_path(producto), method: :delete, data: { confirm: t("admin.productos.confirmations.delete_Products") }, class: 'btn btn-outline-danger btn-sm' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mb-5">
      <h2 class="h5 text-dark border-bottom pb-2">üçï Pizzas Tradicionales</h2>
      <div class="row">
        <% @pizzas.each do |producto| %>
            <div class="col-md-6 col-lg-4 mb-4" id="producto-<%= producto.id %>">
              <div class="card shadow-sm h-100">
                <% if producto.imagen.attached? %>
                  <%= image_tag producto.imagen, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span>Sin imagen</span>
                  </div>
                <% end %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= producto.nombre %></h5>
                  <p class="card-text text-muted"><%= producto.descripcion %></p>
                  <p class="card-text fw-bold"><%= number_to_currency(producto.precio, unit: "COP$", separator: ",", delimiter: ".", precision: 0) %></p>
                  <p class="card-text fw-bold"><%=producto.tipo_pizza %></p>
                             
                  <div class="mt-auto">
                    <%= link_to "üëÅ #{t("admin.productos.actions.see")}", producto_path(producto), class: 'btn btn-outline-primary btn-sm me-2' %>
                    <%= link_to "‚úèÔ∏è #{t("admin.productos.edit")}", edit_dashboard_producto_path(producto), class: 'btn btn-outline-secondary btn-sm me-2' %>
                    <%= link_to "üóë #{t("admin.productos.actions.delete")}", dashboard_producto_path(producto), method: :delete, data: { confirm: t("admin.productos.confirmations.delete_Products") }, class: 'btn btn-outline-danger btn-sm' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>

  </div>
</section>
