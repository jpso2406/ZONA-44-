<section class="py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 text-dark">📦 Productos</h1>
      <%= link_to '➕ Nuevo Producto', new_dashboard_producto_path, class: 'btn btn-success' %>
    </div>

    <div class="mb-4">
      <%= form_with url: dashboard_productos_path, method: :get, local: true, class: "row g-3 align-items-center" do %>
        <div class="col-auto">
          <%= label_tag :grupo_id, "Filtrar por grupo", class: "form-label text-dark" %>
        </div>
        <div class="col-auto">
          <%= select_tag :grupo_id, options_from_collection_for_select(Grupo.all, :id, :nombre, params[:grupo_id]), prompt: "Todos los grupos", class: "form-select" %>
        </div>
        <div class="col-auto">
          <%= submit_tag "Filtrar", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
    
    <% @grupos.each do |grupo| %>
      <div class="mb-5">
        <h2 class="h5 text-dark border-bottom pb-2">👥 <%= grupo.nombre %></h2>

        <div class="row">
          <% grupo.productos.each do |producto| %>
            <div class="col-md-6 col-lg-4 mb-4" id="producto-<%= producto.id %>">
              <div class="card shadow-sm h-100">
                <% if producto.foto.attached? %>
                  <%= image_tag producto.foto, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span>Sin imagen</span>
                  </div>
                <% end %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= producto.name %></h5>
                  <p class="card-text text-muted"><%= producto.descripcion %></p>
                  <p class="card-text fw-bold"><%= number_to_currency(producto.precio, unit: "COP$", separator: ",", delimiter: ".", precision: 0) %></p>
                    <p class="card-text"><small class="text-muted">Grupo: <%= grupo.nombre %></small></p>
                    

                    
                                                                                                        
                  <div class="mt-auto">
                    <%= link_to '👁 Ver', producto_path(producto), class: 'btn btn-outline-primary btn-sm me-2' %>
                   <%= link_to '✏️ Editar', edit_dashboard_producto_path(producto), class: 'btn btn-outline-secondary btn-sm me-2' %>
                    <%= link_to '🗑 Eliminar', dashboard_producto_path(producto), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este producto?' }, class: 'btn btn-outline-danger btn-sm' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
