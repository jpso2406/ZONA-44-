<!-- app/views/admin/dashboard.html.erb -->
<div class="row g-4">
  <!-- Card Grupos -->
  <div class="col-md-4">
    <div class="card shadow-sm border-0 rounded-3 text-white" style="background: linear-gradient(135deg, #4e73df, #224abe);">
      <div class="card-body d-flex align-items-center">
        <div class="me-3">
          <i class="fas fa-folder fa-3x"></i>
        </div>
        <div>
          <h6 class="mb-0">Grupos</h6>
          <h2 class="mb-0 fw-bold"><%= @total_grupos %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Card Productos -->
  <div class="col-md-4">
    <div class="card shadow-sm border-0 rounded-3 text-white" style="background: linear-gradient(135deg, #1cc88a, #13855c);">
      <div class="card-body d-flex align-items-center">
        <div class="me-3">
          <i class="fas fa-box fa-3x"></i>
        </div>
        <div>
          <h6 class="mb-0">Productos</h6>
          <h2 class="mb-0 fw-bold"><%= @total_productos %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Card Promociones -->
  <div class="col-md-4">
    <div class="card shadow-sm border-0 rounded-3 text-white" style="background: linear-gradient(135deg, #f6c23e, #d39e00);">
      <div class="card-body d-flex align-items-center">
        <div class="me-3">
          <i class="fas fa-tags fa-3x"></i>
        </div>
        <div>
          <h6 class="mb-0">Promociones</h6>
          <h2 class="mb-0 fw-bold"><%= @total_promociones %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
