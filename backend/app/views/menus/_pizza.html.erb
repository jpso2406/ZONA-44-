<% if pizza.foto.attached? %>
  <div class="foto">
    <%= image_tag pizza.foto.variant(resize_to_limit: [300, 300]) %>
  </div>
<% end %>

<div class="nombre">â–¶ <%= pizza.nombre %> (<%= pizza.categoria %>)</div>

<% if pizza.descripcion.present? %>
  <p class="subtitulo"><%= pizza.descripcion %></p>
<% end %>

<div class="precios-pizza">
  <% pizza.tamano_pizzas.order(:tamano_cm).each do |tp| %>
    <div class="precio-tamano">
      <span class="tamano"><%= tp.tamano.upcase %> (<%= tp.tamano_cm %>cm)</span>
      <span class="precio">$<%= number_with_delimiter(tp.precio, delimiter: '.') %></span>
    </div>
  <% end %>
</div>

<% if pizza.borde_queso || pizza.combinada %>
  <div class="opciones-pizza">
    <% if pizza.borde_queso %>
      <span class="opcion">Disponible con borde de queso</span>
    <% end %>
    <% if pizza.combinada %>
      <span class="opcion">Disponible combinada</span>
    <% end %>
  </div>
<% end %>

<button class="boton-amarillo"
  onclick="mostrarModalPizza(
    '<%= j pizza.nombre %>',
    '<%= j pizza.descripcion %>',
    '<%= j(url_for(pizza.foto.variant(resize_to_limit: [300, 400]))) if pizza.foto.attached? %>',
    <%= pizza.tamano_pizzas.to_json %>,
    <%= pizza.id %>,
    <%= pizza.borde_queso %>,
    <%= pizza.combinada %>
  )">
  Ver detalle
</button>
