      </li>
      <li>
        <div class="nombre">▶ MIXTA</div>
        <span class="precio">$23.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'mixta_salchicha'), method: :post, class: 'btn-agregar' %>
      </li>
      <li>
        <div class="nombre">▶ POLLO SUIZA</div>
        <span class="precio">$23.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'pollo_suiza_salchicha'), method: :post, class: 'btn-agregar' %>
