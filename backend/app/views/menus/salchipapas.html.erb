      </li>
      <li>
        <div class="nombre">▶ CHORIPAPA</div>
        <span class="precio">$17.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'choripapa_salchicha'), method: :post, class: 'btn-agregar' %>
      </li>
      <li>
        <div class="nombre">▶ LA COSTEÑA</div>
        <span class="precio">$17.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'la_costena_salchicha'), method: :post, class: 'btn-agregar' %>
      </li>
      <li>
        <div class="nombre">▶ SUIZA</div>
        <span class="precio">$20.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'suiza_salchicha'), method: :post, class: 'btn-agregar' %>
      </li>
      <li>
        <div class="nombre">▶ POLLIPAPA</div>
        <span class="precio">$21.000</span>
        <%= button_to 'Agregar', carrito_path(producto: 'pollipapa_salchicha'), method: :post, class: 'btn-agregar' %>
      </li>
      <li>
        <div class="nombre">▶ LA CARNIVORA</div>
