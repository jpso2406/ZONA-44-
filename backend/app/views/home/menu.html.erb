<!DOCTYPE html>
<html>
<head>
  <title>Industry Burger</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'menu', media: 'all' %>
</head>
<body>
  <div id="menu">
    <header>
      <%= image_tag("logo-grande.png", alt: "logo del negocio", class: "logo-grande") %>
    </header>

    <nav>

      <%= image_tag("logo.jpg", alt: "Logo pequeño", class: "logo2") %>
      
      <h1 class="texto">🍔 Nuestro Menú</h1>

      <div class="iconos">
        <%= image_tag('iconos/whatsapp.png', class: "icono") %>
        <%= image_tag('iconos/instagram.png', class: "icono") %>
      </div>
    </nav>

<ul class="lista-menu">
  <% @grupos.each do |grupo| %>
    <li id="grupo-<%= grupo.id %>">
      <% if grupo.foto.attached? %>
        <%= link_to menu_grupo_path(grupo.id, grupo.slug), class: 'menu-btn' do %>
          <%= image_tag grupo.foto, class: "menu-img", alt: grupo.nombre %>
        <% end %>
      <% else %>
        <span class="sin-imagen"><%= grupo.nombre %> (Sin imagen)</span>
      <% end %>
    </li>
  <% end %>
</ul>

    
    <%= link_to "Volver a la Bienvenida", bienvenidos_path, class: "boton-amarillo" %>
 </div>     

</body>
</html>
