  <script>
    AOS.init();
    document.addEventListener("turbo:load", function () {
      const abrir = document.getElementById("abrir-mapa");
      const modal = document.getElementById("modal-mapa");
      const cerrar = document.getElementById("cerrar-mapa");
      if (abrir && modal && cerrar) {
        abrir.addEventListener("click", () => modal.classList.add("activo"));
        cerrar.addEventListener("click", () => modal.classList.remove("activo"));
        window.addEventListener("click", (e) => {
          if (e.target === modal) modal.classList.remove("activo");
        });
      }
    });
  </script>
</body>
</html>
