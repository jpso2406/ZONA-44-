      </a>
      <a href="https://www.instagram.com/zona44gastrobar" target="_blank" title="Instagram">
        <%= image_tag('iconos/instagram.png', class: "icono", alt: "Instagram") %>
      </a>
      <%= link_to new_admin_session_path, class: "boton-footer link", title: "Soy admin" do %>
        <%= image_tag('iconos/admin.png', class: "icono", alt: "Admin", style: "margin-right: 0.5rem;") %>
        
      <% end %>
    </div>

    <!-- Modal del mapa -->
    <div id="modal-mapa" class="modal-mapa">
      <div class="modal-mapa-contenido">
        <span id="cerrar-mapa" class="cerrar-mapa">&times;</span>
        <h3 class="mapa-titulo">游늷 Encu칠ntranos aqu칤</h3>
        <div class="mapa-contenedor">
