<%= form_with(model: producto, local: true, html: { multipart: true }) do |f| %>
  <% if producto.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(producto.errors.count, "error") %> impidieron guardar el producto:</h4>
      <ul>
        <% producto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nombre del producto", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :foto, "Subir foto", class: "form-label" %>
    <%= f.file_field :foto, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :precio, "Precio", class: "form-label" %>
    <%= f.number_field :precio, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= f.label :descripcion, "DescripciÃ³n", class: "form-label" %>
    <%= f.text_area :descripcion, rows: 3, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :grupo_id, "Grupo", class: "form-label" %>
    <%= f.collection_select :grupo_id, Grupo.all, :id, :nombre, { prompt: "Selecciona un grupo" }, class: "form-select" %>
  </div>

  <div class="text-end">
    <%= f.submit "Guardar", class: "btn btn-success" %>
  </div>
<% end %>
