<div id="<%= dom_id producto %>">
  <p>
    <strong>Name:</strong>
    <%= producto.name %>
  </p>

  <% if producto.foto.attached? %>
    <p>
      <%= image_tag producto.foto.variant(resize_to_limit: [300, 300]) %>
    </p>
  <% else %>
    <p><em>Sin imagen</em></p>
  <% end %>

  <p>
    <strong>Precio:</strong>
    <%= producto.precio %>
  </p>

  <p>
  <strong>Adicionales:</strong>
  <% if producto.adicionales.any? %>
    <ul>
      <% producto.adicionales.each do |adicional| %>
        <li><%= adicional.ingredientes %></li>
      <% end %>
    </ul>
  <% else %>
    <em>Sin adicionales</em>
  <% end %>
</p>

  <p>
    <strong>Descripcion:</strong>
    <%= producto.descripcion %>
  </p>

</div>
