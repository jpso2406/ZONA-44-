<section class="productos-premium">

  <!--BUSCADOR -->
  <header class="hero">
    <h1>Elige tu comida favorita 游꼢游꼣游꺐</h1>

    <%= form_with url: grupo_producto_index_path(@grupo), method: :get, local: true do %>
      <%= text_field_tag :query, params[:query], placeholder: "游댌 Buscar en #{@grupo.nombre}", class: "buscador" %>
    <% end %>
  </header>


  <!-- CATEGOR칈AS -->
 <div class="categorias-scroll">
    <% @grupos.each do |grupo| %>
      <%= link_to grupo.nombre,
          grupo_producto_index_path(grupo),
          class: "boton-categoria #{'activo' if grupo.id == @grupo.id}" %>
    <% end %>
  </div>

  <!-- GRID DE PRODUCTOS -->
  <div class="contenedor-productos">
    <% @productos.each do |producto| %>
      <div class="tarjeta-producto">
        <div class="imagen-wrapper">
          <% if producto.foto.attached? %>
            <%= image_tag producto.foto, alt: producto.name, class: "producto-imagen" %>
          <% else %>
            <%= image_tag "sin_imagen.png", alt: t("productos.sin_imagen"), class: "producto-imagen" %>
          <% end %>
        </div>
        <div class="info">
          <h2><%= producto.name %></h2>
          <p class="precio">$<%= producto.precio %></p>
          <%= link_to "Agregar ", grupo_producto_path(@grupo, producto), class: "btn-agregar" %>
        </div>
      </div>
    <% end %>
  </div>
  
<script>
(() => {
  // Funci칩n que activa la b칰squeda dentro del grupo actual
  function activarBuscador() {
    const input = document.querySelector(".buscador");
    if (!input) return;

    const productos = document.querySelectorAll(".tarjeta-producto");
    input.addEventListener("input", () => {
      const texto = input.value.toLowerCase();
      productos.forEach(card => {
        const nombre = card.querySelector("h2").textContent.toLowerCase();
        card.style.display = nombre.includes(texto) ? "flex" : "none";
      });
    });
  }

  // Detecta si Turbo est치 activo y usa el evento adecuado
  if (window.Turbo) {
    document.addEventListener("turbo:load", activarBuscador);
  } else {
    document.addEventListener("DOMContentLoaded", activarBuscador);
  }
})();
</script>
</section>


