<style>
body {
  margin: 0;
  font-family: 'Poppins', sans-serif;
  background: #fafafa;
  color: #333;
}

/* NAVBAR */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ff5722;
  color: #fff;
  padding: 0.8rem 1.5rem;
  font-weight: bold;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 15px;
}

.menu-btn {
  background: transparent;
  border: none;
  color: #fff;
  font-size: 1.4rem;
  cursor: pointer;
}

.logo {
  font-size: 1.3rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

.nav-right .btn-cart {
  color: #fff;
  font-size: 1.4rem;
  text-decoration: none;
}

/* HERO */
.hero {
  position: relative;
  text-align: center;
  padding: 5rem 1rem;
  background: url("banner.jpg") center/cover no-repeat;
  color: #fff;
}

.hero .overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.7));
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero h1 {
  font-size: 2.8rem;
  margin-bottom: 1rem;
}

.hero p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
}

.btn-hero {
  background: #ff5722;
  padding: 12px 25px;
  border-radius: 25px;
  color: #fff;
  text-decoration: none;
  font-weight: bold;
  transition: background 0.3s ease;
}

.btn-hero:hover {
  background: #e64a19;
}

/* CATEGOR√çAS SCROLL */
.categorias-scroll {
  display: flex;
  gap: 1rem;
  overflow-x: auto;
  padding: 1rem;
  background: #fff;
  border-bottom: 1px solid #eee;
  scroll-snap-type: x mandatory;
}

.categorias-scroll button {
  flex: 0 0 auto;
  padding: 10px 18px;
  border: none;
  border-radius: 25px;
  background: #f1f1f1;
  cursor: pointer;
  font-weight: 600;
  transition: background 0.3s, transform 0.2s;
  scroll-snap-align: start;
}

.categorias-scroll button:hover {
  background: #ff5722;
  color: #fff;
  transform: scale(1.05);
}

/* GRID TARJETAS */
.contenedor-grupos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  padding: 2rem;
}

.tarjeta-grupo {
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.tarjeta-grupo:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 12px 25px rgba(0,0,0,0.15);
}

.imagen-grupo img {
  width: 100%;
  height: 160px;
  object-fit: cover;
}

.contenido-grupo {
  padding: 1rem;
  text-align: center;
}

.nombre-grupo {
  color: #333;
  font-size: 1.1rem;
  font-weight: bold;
  margin-bottom: 10px;
}

.btn-ver {
  background: #ff5722;
  border: none;
  padding: 8px 18px;
  border-radius: 20px;
  color: #fff;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.3s;
}

.btn-ver:hover {
  background: #e64a19;
}
</style>
