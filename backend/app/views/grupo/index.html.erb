<section id="grupos-menu"> 
  <%= link_to root_path, class: "btn-regresar" do %>
    <i class="fas fa-arrow-left"></i> <%= t('grupos.back') %>
  <% end %>

  <h1><i class="fas fa-book-open"></i> <%= t('grupos.our_menu') %></h1>

  <div class="contenedor-grupos">
    <% @grupos.each do |grupo| %>
      <div class="tarjeta-grupo">
        <%= link_to grupo_path(grupo), class: "enlace-grupo" do %>
          <div class="imagen-grupo">
            <% if grupo.foto.attached? %>
              <%= image_tag grupo.foto, alt: grupo.nombre %>
            <% else %>
              <%= image_tag "logo.jpg", alt: t('grupos.no_image') %>
            <% end %>
          </div>
          <div class="nombre-grupo">
            <%= grupo.nombre %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<style> 
#grupos-menu {
  padding: 2rem;
  background-color: #fffaf4;
  text-align: center;
}

#grupos-menu h1 {
  font-size: 2rem;
  margin-bottom: 2rem;
  color: #311e1e;
}

.btn-regresar {
  display: inline-block;
  margin-bottom: 1rem;
  padding: 8px 16px;
  background-color: #f4511e;
  color: white;
  font-weight: bold;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.2s ease;
}

.btn-regresar:hover {
  background-color: #d63c12;
  color: white;
}

.contenedor-grupos {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  justify-content: center;
}

.tarjeta-grupo {
  width: 160px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.2s ease;
}

.tarjeta-grupo:hover {
  transform: scale(1.05);
}

.enlace-grupo {
  text-decoration: none;
  color: inherit;
  display: block;
}

.imagen-grupo img {
  width: 100%;
  height: 120px;
  object-fit: contain;
  padding: 10px;
  background-color: #fff;
}

.nombre-grupo {
  background-color: #f4511e;
  color: white;
  padding: 10px 0;
  font-weight: bold;
  font-size: 0.95rem;
}
</style>

